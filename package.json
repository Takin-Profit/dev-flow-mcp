{
  "name": "devflow-mcp",
  "version": "1.0.0",
  "description": "DevFlow MCP (DFM) Server: Knowledge graph memory layer for software development workflows.",
  "license": "MIT",
  "author": "Gannon Hall",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "imports": {
    "#*": "./src/*"
  },
  "bin": {
    "dfm-server": "dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-repo/devflow-mcp.git"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "prepare": "pnpm build",
    "dev": "tsc --watch",
    "test": "node --experimental-transform-types --disable-warning=ExperimentalWarning --test",
    "test:watch": "node --experimental-transform-types --disable-warning=ExperimentalWarning --test --watch",
    "test:coverage": "cross-env NODE_V8_COVERAGE=./coverage node --experimental-transform-types --disable-warning=ExperimentalWarning --test --experimental-test-coverage",
    "test:verbose": "clear && node --experimental-transform-types --disable-warning=ExperimentalWarning --test --reporter verbose",
    "test:integration": "cross-env TEST_INTEGRATION=true pnpm test",
    "check": "ultracite check",
    "lint": "ultracite check",
    "lint:fix": "ultracite fix",
    "fix": "pnpm lint:fix",
    "neo4j:init": "tsx src/cli/neo4j-setup.ts init",
    "neo4j:test": "tsx src/cli/neo4j-setup.ts test",
    "doctor": "ultracite doctor"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.11.0",
    "axios": "^1.8.4",
    "dotenv": "^16.4.7",
    "lru-cache": "^11.1.0",
    "neo4j-driver": "^5.28.1",
    "openai": "^4.90.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@types/lru-cache": "^7.10.10",
    "@types/node": "^22",
    "@types/uuid": "^10.0.0",
    "cross-env": "^10.1.0",
    "glob": "^11.0.1",
    "lefthook": "^1.13.6",
    "rimraf": "^6.0.1",
    "shx": "^0.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "ultracite": "^5.6.2",
    "zod": "^3.24.2"
  },
  "overrides": {
    "glob": "^11.0.1",
    "rimraf": "^6.0.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
