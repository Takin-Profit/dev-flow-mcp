{
  "name": "devflow-mcp",
  "version": "1.0.0",
  "description": "DevFlow MCP (DFM) Server: Knowledge graph memory layer for software development workflows.",
  "license": "MIT",
  "author": "Gannon Hall",
  "type": "module",
  "main": "dist/server/index.js",
  "types": "dist/server/index.d.ts",
  "imports": {
    "#*": "./src/*"
  },
  "bin": {
    "dfm": "dist/cli/index.js",
    "__dfm_bash_complete": "dist/cli/bash-complete.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-repo/devflow-mcp.git"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown && shx chmod +x dist/cli/*.js",
    "typecheck": "tsc --noEmit",
    "dev": "tsx watch src/server/index.ts",
    "test": "cross-env NODE_ENV=testing tsx --test src/**/*.test.ts",
    "test:watch": "cross-env NODE_ENV=testing tsx --test --watch src/**/*.test.ts",
    "test:coverage": "cross-env NODE_ENV=testing NODE_V8_COVERAGE=./coverage tsx --test --experimental-test-coverage src/**/*.test.ts",
    "test:verbose": "cross-env NODE_ENV=testing tsx --test src/**/*.test.ts",
    "test:integration": "cross-env NODE_ENV=testing TEST_INTEGRATION=true pnpm test",
    "check": "ultracite check",
    "fix": "ultracite fix",
    "doctor": "ultracite doctor",
    "neo4j:test": "tsx src/cli/index.ts neo4j test",
    "neo4j:init": "tsx src/cli/index.ts neo4j init"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.20.0",
    "@stricli/auto-complete": "^1.2.4",
    "@stricli/core": "^1.2.4",
    "arkenv": "^0.7.3",
    "arktype": "^2.1.23",
    "consola": "^3.4.2",
    "dotenv": "^17.2.3",
    "lru-cache": "^11.1.0",
    "neo4j-driver": "^6.0.0",
    "openai": "^6.3.0",
    "uuid": "^13.0.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "xdg-app-paths": "^8.3.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/node": "^24.7.2",
    "@types/uuid": "^11.0.0",
    "cross-env": "^10.1.0",
    "glob": "^11.0.1",
    "lefthook": "^1.13.6",
    "rimraf": "^6.0.1",
    "shx": "^0.4.0",
    "tsdown": "^0.15.7",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "ultracite": "^5.6.4"
  },
  "overrides": {
    "glob": "^11.0.1",
    "rimraf": "^6.0.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
