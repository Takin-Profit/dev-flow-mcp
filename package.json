{
  "name": "devflow-mcp",
  "version": "1.0.0",
  "description": "DevFlow MCP (DFM) Server: Knowledge graph memory layer for software development workflows.",
  "license": "MIT",
  "author": "Gannon Hall",
  "type": "module",
  "main": "dist/server/index.js",
  "types": "dist/server/index.d.ts",
  "imports": {
    "#*": "./src/*"
  },
  "bin": {
    "dfm": "dist/cli/index.js",
    "__dfm_bash_complete": "dist/cli/bash-complete.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-repo/devflow-mcp.git"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "dev": "tsc --watch",
    "test": "node --experimental-transform-types --disable-warning=ExperimentalWarning --test",
    "test:watch": "node --experimental-transform-types --disable-warning=ExperimentalWarning --test --watch",
    "test:coverage": "cross-env NODE_V8_COVERAGE=./coverage node --experimental-transform-types --disable-warning=ExperimentalWarning --test --experimental-test-coverage",
    "test:verbose": "clear && node --experimental-transform-types --disable-warning=ExperimentalWarning --test --reporter verbose",
    "test:integration": "cross-env TEST_INTEGRATION=true pnpm test",
    "check": "ultracite check",
    "lint": "ultracite check",
    "lint:fix": "ultracite fix",
    "fix": "pnpm lint:fix",
    "doctor": "ultracite doctor",
    "neo4j:test": "tsx src/cli/index.ts neo4j test",
    "neo4j:init": "tsx src/cli/index.ts neo4j init"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.11.0",
    "@stricli/auto-complete": "^1.2.0",
    "@stricli/core": "^1.2.0",
    "arkenv": "^0.7.3",
    "arktype": "^2.1.22",
    "axios": "^1.8.4",
    "consola": "^3.4.2",
    "dotenv": "^16.4.7",
    "lru-cache": "^11.1.0",
    "neo4j-driver": "^5.28.1",
    "openai": "^4.90.0",
    "uuid": "^11.1.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "xdg-app-paths": "^8.3.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/lru-cache": "^7.10.10",
    "@types/node": "^22",
    "@types/uuid": "^10.0.0",
    "cross-env": "^10.1.0",
    "glob": "^11.0.1",
    "lefthook": "^1.13.6",
    "rimraf": "^6.0.1",
    "shx": "^0.4.0",
    "tsdown": "^0.15.6",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "ultracite": "^5.6.2",
    "zod": "^3.24.2"
  },
  "overrides": {
    "glob": "^11.0.1",
    "rimraf": "^6.0.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
